<h1> Welcome to Trippin Out!</h1>


<table>
<thead>
  <tr>
    <th> Guest </th>
    <th> Name </th>
    <th> Email </th>
    <th> Phone </th>
    <th> Balance Due </th>
  </tr>
  </thead>


<tbody>
  <% @users.each do |user| %>
  <tr>
    <td><%= image_tag user.profile_pic%></td>
    <td><%= user.name %></td>
    <td><%= user.email %></td>
    <td><%= user.phone %></td>
    <td>$   <%= user.balance %></td>
    <td><%= link_to 'Edit', edit_user_path(user) %>
      <td><%= link_to 'Delete', user, method: :delete, data: { confirm: 'Are you sure you want to leave the trip?' } %> </td>
    </tr>
    <% end %>
    </tbody>
    </table>


</tbody>
