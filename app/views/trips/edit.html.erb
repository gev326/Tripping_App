
<h1> Update Your Trip! </h1>

<div class="row">
  <div class="col-md-6 col-md-offset-3">
    <%= form_for(@trip) do |t| %>

      <%= t.label :location %>
      <%= t.text_field :location, class: 'form-control' %>

      <%= t.label :date %>
      <%= t.text_field :date, class: 'form-control' %>

      <%= t.label :transportation %>
      <%= t.text_field :mode, class: 'form-control' %>

       <%= t.label :departure_location %>
      <%= t.text_field :departure_location, class: 'form-control' %>

       <%= t.label :departure_time %>
      <%= t.text_field :departure_time, class: 'form-control' %>

       <%= t.label :return_location %>
      <%= t.text_field :return_location, class: 'form-control' %>

     <%= t.label :return_time %>
      <%= t.text_field :return_time, class: 'form-control' %>


      <%= t.submit "Save changes", class: "btn btn-primary" %>
    <% end %>


  </div>
</div>
