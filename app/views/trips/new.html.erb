<h1>Lets Get Started On Your Trip!</h1>
<%= form_for @trip do |f| %>
  <% if @trip.errors.any? %>
    <div class="error_messages">
      <h2>Form is invalid</h2>
      <ul>
        <% for message in @trip.errors.full_messages %>
          <li><%= message %></li>
        <% end %>
      </ul>
    </div>
  <% end %>
  <div class="field">
    <%= f.label :location %>
    <%= f.text_field :location %>
  </div>
  <div class="field">
    <%= f.label :date %>
    <%= f.text_field :date %>
  </div>
  <div class="field">
    <%= f.label :transportation %>
    <%= f.text_field :mode %>
  </div>

  <div class="field">
    <%= f.label :departure_location %>
    <%= f.text_field :departure_location%>
  </div>

  <div class="field">
    <%= f.label :departure_time %>
    <%= f.text_field :departure_time %>
  </div>
  <div class="field">
    <%= f.label :return_location %>
    <%= f.text_field :return_location%>
  </div>
  <div class="field">
    <%= f.label :return_time %>
    <%= f.text_field :return_time %>
  </div>
  <div class="actions"><%= f.submit %></div>
<% end %>
