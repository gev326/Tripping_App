<h1>Get On The List!</h1>

<%# binding.pry %>
<%= form_for [@trip, @guest] do |f| %>
 <div class="field">
    <%= f.label :name %><br>
   <%= f.text_field :name %>
    </div>
   <div class="field">
     <%= f.label :email %><br>
     <%= f.text_field :email %>
   </div>

   <div class="field">
     <%= f.label :phone %><br>
     <%= f.telephone_field :phone %>
   </div>

   <div class="field">
     <%= f.label :balance %><br>
     <%= f.number_field :balance %>
   </div>


 <div class="actions"><%= f.submit %></div>

<% end %>
